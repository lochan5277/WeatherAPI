@page "/home"
@inject NavigationManager Nav
<ProtectedPage>
<style>
    body{
        min-height: 100vh;
        background-image: linear-gradient(to bottom, #b7f8db 0%, #50c9c3 100%);
        background-repeat: no-repeat;
        background-size: cover;
        background-attachment: fixed;
    }
</style>

<h3>Welcome to WeatherApp 🌤️</h3><br>
<h5>Welcome to WeatherApp – your personalized destination for exploring weather updates with ease. Quickly check the current weather in your favorite city. You can save your preferred city and weather type for a more tailored experience. WeatherApp makes staying informed simple, clear, and enjoyable.
</h5>
<br>
<button class="btn btn-primary" @onclick='() => Nav.NavigateTo("/weather")'>Check Weather</button>
<button class="btn btn-secondary" @onclick='() => Nav.NavigateTo("/favlist")'>Favorites</button>
</ProtectedPage>